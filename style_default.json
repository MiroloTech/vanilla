{
    "--": {
        "--color-bg": "#1c1c1e",
        "--color-text": "#ffffff",
        "--color-main": "#39aea9",
        "--color-main2": "#557b83",
        "--color-light": "#e5efc1",
        "--color-light2": "#a2d5ab",
        "--color-highlight": "#ffffff22",
        "--color-transparent": "#ffffff00",
        "--color-bright.100": "#ffffff21",
        "--color-bright.200": "#ffffff33",
        "--radius": 6.0,
        "--text-size": 16
    },
    
    
    
    "Panel": {
        "radius": "--radius",
        "color": "--color-bg"
    },
    
    "Button": {
        "radius": "--radius",
        "color_normal": "--color-main",
        "color_hover": "--color-main2",
        "color_pressed": "--color-light",
        "text_color_normal": "--color-text",
        "text_color_hover": "--color-text",
        "text_color_pressed": "--color-bg",
        "icon_color": "--color-text",
        "text_size": "--text-size",
        "text_align": "centre",
        "text": "press me",
        "padding_left": 5.0,
        "padding_right": 5.0,
        "toggle_mode": false
    },
    
    "FileTree": {
        "button_height": 20.0,
        "button_classes": "btn-file-tree"
    },
    
    
    "VBox": {
        "spacing": 10.0
    },
    
    
    
    ".panel-main": {
        "color": "--color-main",
        "radius": 0.0
    },
    ".panel-overlay": {
        "color": "--color-highlight"
    },
    ".panel-special": {
        "color": "--color-light"
    },
    
    ".btn-file-tree": {
        "color_normal": "--color-transparent",
        "color_hover": "--color-bright.100",
        "color_pressed": "--color-bright.200",
        "text_color_normal": "--color-text",
        "text_color_hover": "--color-text",
        "text_color_pressed": "--color-text",
        "text_align": "start",
        "radius": 0.0,
        "toggle_mode": true
    }
}